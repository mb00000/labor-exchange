<Window x:Class="Labor_Exchange.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labor_Exchange.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Coral">
        <Button Content="Знайти роботу" Margin="50,291,450,68" Width="300" Height="75" FontSize="20" Click="WorkOffersTable"/>
        <Button Content="Знайти працівників" Margin="450,291,50,68" RenderTransformOrigin="0.332,1.213" Width="300" Height="75" FontSize="20" Click="EmployeesTable">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.322"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.243"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Зареєструвати компанію" Width="300" Height="75" FontSize="20" Margin="453,101,47,258" Click="CreateCompany"/>
    </Grid>
</Window>
